{
    "manifest_version": 3,
    "name": "Paragraph Content & Color Changer",
    "version": "1.0",
    "description": "Change the content and color of every <p> tag on the webpage.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  
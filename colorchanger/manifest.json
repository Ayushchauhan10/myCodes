{
    "manifest_version": 2,
    "name": "Font Color Changer",
    "version": "1.0",
    "description": "Change the font color of the current active web page",
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "browser_action": {
      "default_title": "Font Color Changer",
      "default_popup": "popup.html"
    },
 
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background":{
        "scripts":["background.js"]
        
    }
  }
  